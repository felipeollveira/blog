<div class="news" id="root">
	<div id="loading">
		<div id="loading-spinner"></div>
	</div>
</div>

<script type="text/javascript" src="static/js/cards.js"></script>
    
<script>
	document.addEventListener('DOMContentLoaded', function () {
    // Immediately Invoked Function Expression (IIFE) to encapsulate the logic
    (function () {
        // Add 'loaded' class to the body to signify that the content is loaded
        document.body.classList.toggle('loaded', true);
        
        // Get references to key elements
        const root = document.getElementById('root');
        const loadingElement = document.getElementById('loading');

        if (!loadingElement) {
            console.warn('Loading element not found.');
            return;
        }

        // Check if the root element is empty or doesn't exist
        if (!root || root.children.length === 0) {
            // Fade out the loading element
            loadingElement.classList.add('fade-out');

            // Wait for the fade-out transition to complete before removing the element
            setTimeout(function () {
                if (loadingElement.parentNode) {
                    loadingElement.parentNode.removeChild(loadingElement);
                }
            }, 500); // Assuming a 500ms fade-out transition; adjust if necessary
        } else {
            // If root has content, remove the loading element immediately
            if (loadingElement.parentNode) {
                loadingElement.parentNode.removeChild(loadingElement);
            }
        }
    })();
});


	</script>

 

  
 
 
